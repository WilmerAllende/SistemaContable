<%= simple_form_for(@account, defaults: { input_html: { class: 'form-horizontal', role:'form', id:"ss" } } ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :codigo,required: true, input_html: { class: 'form-control' ,id: 'inputEmail' } %>
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
