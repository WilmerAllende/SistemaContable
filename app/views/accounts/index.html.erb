<p id="notice"><%= notice %></p>
<h1>Accounts</h1>

<%= form_tag(accounts_path, method: :get, class: "form-inline", role: 'search') do %>
  <div class="input-group">              
    <%= text_field_tag :term, 
        params[:term], 
        id: 'movies_search', 
        autocomplete: :off, 
        placeholder: 'Search', 
        class: 'form-control' %>
    <div class="input-group-btn search-panel">
      <%= link_to 'Clear', root_url, class: "btn btn-default" %>
      <%= submit_tag 'Search', name: nil, class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Name</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.codigo %></td>
        <td><%= account.name %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @accounts %>
</div>
<br>

<%= link_to 'New Account', new_account_path, class:"btn btn-success" %>
